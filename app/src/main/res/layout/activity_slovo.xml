<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SlovoActivity"
    android:background="@color/main_color_2">

    <ImageView
        android:transitionName="image_transition"
        android:id="@+id/ivASlovoAbaiLogo"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/content_description_iv_activity_slovo_abai_logo"
        android:src="@drawable/main_logo_jpg" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/title"
                android:transitionName="slovo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:scrollbars="vertical"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Test Title"
                android:textColor="@color/main_color_1"
                android:fontFamily="@font/merriweatherbold"/>

            <TextView

                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:lineSpacingExtra="1dp"
                android:textSize="18sp"
                tools:text="Text Description"
                android:fontFamily="@font/merriweatherlight"
                android:textColor="#333333"
                />
            <TextView
                android:id="@+id/description_additional"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:lineSpacingExtra="1dp"
                android:textSize="18sp"
                tools:text=" "
                android:fontFamily="@font/merriweatherlight"
                android:textColor="#333333"
                android:visibility="gone"
                />

            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/ornament"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/content_description_iv_activity_slovo_abai_logo"
                android:src="@drawable/smallornament"
                android:paddingTop="5dp"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>